<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ask.Me</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="shortcut icon" href="/img/icons8-ask-96.png" type="image/x-icon">
    <!-- fonts -->
    <link href="https://api.fontshare.com/v2/css?f[]=excon@100,400,500,700,900&display=swap" rel="stylesheet">
</head>
<body>
    <navbar class="navbar px-4 py-4" id="navbar">
        <h4 id="logo-nav">
        <a href="/">Ask.Me</a>
        </h4>
        <a href="/perguntar" class="btn btn-success">Fazer pergunta</a>
    </navbar>
    <br><br><br>
    
    <h1 class="text-center">Perguntas</h1>
    <hr style="border: 1px solid #e3e3e3; width: 35%;">
    <br><br><br>

    <% perguntas.forEach(pergunta => { %>
        <div class="container" id="container">
            <div class="card">
                <div class="card-header pt-3">
                    <h6 id="username">
                        <img width="24" height="24" src="https://img.icons8.com/color/100/filled-topic.png" alt="filled-topic"/>
                        <%= pergunta.username %>
                        <span class="text-dark">disse:</span>
                    </h6>
                    <br>
                    <h2 id="titulo">"<%= pergunta.titulo %>"</h2>
                    <br>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center pt-3 pb-3">
                    <a class="btn btn-success" href="/pergunta/<%= pergunta.id %>">Detalhes</a>
                    <span id="data" class="text-right">Publicado em: <%= pergunta.createdAtFormatted %></span>
                </div>
            </div>
        </div>
        <br><br><br>
    <% }) %>

    <div class="text-center">
        <a href="#top" class="btn btn-secondary">Voltar ao topo</a>
    </div>
    <br><br>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>